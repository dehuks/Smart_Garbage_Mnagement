<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#F5F5F5">

    <!-- Navigation Bar with Purple Background -->
    <RelativeLayout
        android:id="@+id/navbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#6A0DAD">

        <TextView
            android:id="@+id/navTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Smart Waste Management"
            android:textSize="20sp"
            android:textColor="@android:color/white"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

    <!-- Dashboard Title -->
    <TextView
        android:id="@+id/dashboardTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to the Smart Waste Management Dashboard"
        android:textSize="24sp"
        android:layout_below="@id/navbar"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/black" />

    <!-- Subtitle -->
    <TextView
        android:id="@+id/dashboardSubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your data at a glance"
        android:textSize="18sp"
        android:layout_below="@id/dashboardTitle"
        android:layout_marginTop="8dp"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/darker_gray" />

    <!-- Section: Recommended Bins -->
    <TextView
        android:id="@+id/recommendedBinsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recommended Bins"
        android:textSize="20sp"
        android:layout_below="@id/dashboardSubtitle"
        android:layout_marginTop="24dp"
        android:textColor="#6A0DAD" />

    <!-- Bin Cards -->
    <LinearLayout
        android:id="@+id/binCards"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/recommendedBinsTitle"
        android:layout_marginTop="8dp"
        android:weightSum="3">

        <!-- Card 1: Bin 1 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="8dp"
            android:background="@drawable/card_background"
            android:layout_marginEnd="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bin Type: Plastic"
                android:textSize="16sp"
                android:textColor="@android:color/black"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Capacity: 10L"
                android:textSize="14sp"
                android:textColor="@android:color/darker_gray"/>
        </LinearLayout>

        <!-- Card 2: Bin 2 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="8dp"
            android:background="@drawable/card_background"
            android:layout_marginHorizontal="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bin Type: Organic"
                android:textSize="16sp"
                android:textColor="@android:color/black"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Capacity: 15L"
                android:textSize="14sp"
                android:textColor="@android:color/darker_gray"/>
        </LinearLayout>

        <!-- Card 3: Bin 3 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="8dp"
            android:background="@drawable/card_background"
            android:layout_marginStart="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bin Type: Paper"
                android:textSize="16sp"
                android:textColor="@android:color/black"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Capacity: 8L"
                android:textSize="14sp"
                android:textColor="@android:color/darker_gray"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Section: Schedule Collection -->
    <TextView
        android:id="@+id/scheduleTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Schedule Collection"
        android:textSize="20sp"
        android:layout_below="@id/binCards"
        android:layout_marginTop="24dp"
        android:textColor="#6A0DAD" />

    <!-- Collection Schedule Card -->
    <LinearLayout
        android:id="@+id/collectionCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/card_background">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Next Collection: Friday, 10:00 AM"
            android:textSize="16sp"
            android:textColor="@android:color/black"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Location: Zone 3, Main Street"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"/>
    </LinearLayout>

    <!-- Sustainability Tips Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/sustainabilityTipsCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/scheduleTitle"
        android:layout_marginTop="16dp"
        android:layout_margin="8dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <!-- Image at the top of the card -->
            <ImageView
                android:id="@+id/cardImage"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:scaleType="centerCrop"
                android:src="@drawable/images" /> <!-- Replace with actual image -->

            <!-- Title Text -->
            <TextView
                android:id="@+id/cardTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/cardImage"
                android:layout_marginTop="8dp"
                android:text="Sustainability Tips"
                android:textSize="18sp"
                android:textColor="@android:color/black"
                android:fontFamily="sans-serif-medium" />

            <!-- Description or additional info -->
            <TextView
                android:id="@+id/cardDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/cardTitle"
                android:layout_marginTop="4dp"
                android:text="Use reusable bags, compost organic waste, and recycle wherever possible."
                android:textSize="16sp"
                android:textColor="@android:color/darker_gray" />

            <!-- Optional Capacity/Info -->
            <TextView
                android:id="@+id/cardInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/cardDescription"
                android:layout_marginTop="4dp"
                android:text="Capacity: 120 L"
                android:textSize="14sp"
                android:textColor="@android:color/holo_green_dark" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <!-- Request Pickup Button -->
    <Button
        android:id="@+id/requestPickupButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Request Pickup"
        android:backgroundTint="#6A0DAD"
        android:textColor="@android:color/white"
        android:layout_below="@id/sustainabilityTipsCard"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp" />

</RelativeLayout>
